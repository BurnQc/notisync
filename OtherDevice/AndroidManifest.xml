<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mattprecious.otherdevice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name="com.mattprecious.otherdevice.activity.OtherDevice"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mattprecious.otherdevice.preferences.PrimaryPreferenceActivity"
            android:label="Preferences" />
        <activity
            android:name="com.mattprecious.otherdevice.preferences.SecondaryPreferenceActivity"
            android:label="Preferences" />
        <activity
            android:name="com.mattprecious.otherdevice.preferences.BasicPreferenceActivity" />
        <activity
            android:name="com.mattprecious.otherdevice.activity.PrimaryCustomProfileActivity" />
        <activity
            android:name="com.mattprecious.otherdevice.activity.SecondaryCustomProfileActivity" />

        <service android:name="com.mattprecious.otherdevice.service.PrimaryService" />
        <service android:name="com.mattprecious.otherdevice.service.SecondaryService" />
        <service
            android:name="com.mattprecious.otherdevice.service.NotificationService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>

        <receiver android:name="com.mattprecious.otherdevice.receiver.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data
                    android:path="com.mattprecious.otherdevice"
                    android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>

</manifest>